# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 2
max_line_length = 120

[*.{xml,yml,yaml,json}]
indent_style = space
indent_size = 2

[pom.xml]
indent_style = space
indent_size = 2
